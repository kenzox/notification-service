<!DOCTYPE html>
<html lang="{{__meta.locale}}" dir="{{__meta.direction}}">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{t "reservationConfirmation.title"}}</title>
    {{> styles}}
</head>

<body>
    <div class="container">
        <center>
            {{> header}}

            <!-- Main Card -->
            <table width="600" cellpadding="0" cellspacing="0" class="main-card">
                <tr>
                    <td>
                        <h2 style="margin: 0 0 10px; color: #000000;">{{t "reservationConfirmation.greeting" guestName=(or customerName contactName cardHolder passengers.[0].name passengers.[0].firstName "Guest")}}</h2>
                        <p style="margin: 0 0 22px; color: #333333; font-size: 14px;">{{t "reservationConfirmation.confirmed"}}</p>

                        <!-- Reservation Info Summary -->
                        <table width="100%" cellpadding="0" cellspacing="0"
                            style="margin: 0 0 24px; border: 1px solid #E0E0E0; border-radius: 8px; background-color: #F9F9F9;">
                            <tr>
                                <td style="padding: 14px 16px;">
                                    <table width="100%" cellpadding="0" cellspacing="0">
                                        <tr>
                                            <td valign="top" width="25%" style="padding: 0 10px 0 0;">
                                                <p
                                                    style="margin: 0 0 5px; font-size: 11px; font-weight: 700; color: #999999; text-transform: uppercase;">
                                                    {{t "reservationConfirmation.reservationNumber"}}</p>
                                                <p style="margin: 0; font-size: 13px; color: #333333; font-weight: 600;">{{or reservationNumber bookingId "-"}}</p>
                                            </td>
                                            <td valign="top" width="25%" style="padding: 0 10px;">
                                                <p
                                                    style="margin: 0 0 5px; font-size: 11px; font-weight: 700; color: #999999; text-transform: uppercase;">
                                                    {{t "common.status"}}</p>
                                                <p style="margin: 0; font-size: 13px; color: #FF6200; font-weight: 600;">
                                                    {{or status (t "reservationConfirmation.statusConfirmed")}}
                                                </p>
                                            </td>
                                            <td valign="top" width="25%" style="padding: 0 10px;">
                                                <p
                                                    style="margin: 0 0 5px; font-size: 11px; font-weight: 700; color: #999999; text-transform: uppercase;">
                                                    {{t "common.reservationDate"}}</p>
                                                <p style="margin: 0; font-size: 13px; color: #333333; font-weight: 600;">{{formatDate (or reservationDate bookingDate)}}</p>
                                            </td>
                                            <td valign="top" width="25%" style="padding: 0 0 0 10px;">
                                                <p
                                                    style="margin: 0 0 5px; font-size: 11px; font-weight: 700; color: #999999; text-transform: uppercase;">
                                                    {{t "common.totalPrice"}}</p>
                                                <p style="margin: 0; font-size: 13px; color: #333333; font-weight: 700;">
                                                    {{formatCurrency (or totalAmount 0) (or currency "TRY")}}
                                                </p>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>

                        {{#if checkInDate}}
                        <table class="data-table" style="margin-bottom: 24px;">
                            <tr>
                                <td style="width: 35%; color: #666666; font-size: 13px;">{{t "reservationConfirmation.checkIn"}}</td>
                                <td style="color: #333333; font-size: 13px;">
                                    {{formatDate checkInDate}} {{or checkInTime "-"}}
                                </td>
                            </tr>
                            <tr>
                                <td style="width: 35%; color: #666666; font-size: 13px;">{{t "reservationConfirmation.checkOut"}}</td>
                                <td style="color: #333333; font-size: 13px;">
                                    {{formatDate checkOutDate}} {{or checkOutTime "-"}}
                                </td>
                            </tr>
                        </table>
                        {{/if}}

                        <!-- Price Details -->
                        <h3>{{t "common.paymentDetails"}}</h3>
                        <table class="data-table">
                            {{#if priceItems}}
                            {{#each priceItems}}
                            <tr>
                                <td style="width: 70%; font-size: 13px; color: #666666;">{{or label description name (t "reservationConfirmation.units")}}</td>
                                <td style="text-align: {{../__meta.oppositeAlign}}; font-size: 13px; color: #333333;">
                                    {{formatCurrency (or amount price 0) ../currency}}
                                </td>
                            </tr>
                            {{/each}}
                            {{else}}
                            {{#if items}}
                            {{#each items}}
                            <tr>
                                <td style="width: 70%; font-size: 13px; color: #666666;">{{or name (t "reservationConfirmation.units")}}</td>
                                <td style="text-align: {{../__meta.oppositeAlign}}; font-size: 13px; color: #333333;">
                                    {{formatCurrency (or price amount 0) ../currency}}
                                </td>
                            </tr>
                            {{/each}}
                            {{else}}
                            <tr>
                                <td style="width: 70%; font-size: 13px; color: #666666;">{{t "reservationConfirmation.units"}}</td>
                                <td style="text-align: {{__meta.oppositeAlign}}; font-size: 13px; color: #333333;">
                                    {{formatCurrency (or totalAmount 0) (or currency "TRY")}}
                                </td>
                            </tr>
                            {{/if}}
                            {{/if}}
                            <tr>
                                <td style="background-color: #FAFAFA; color: #333333; font-weight: 700;">{{t "common.totalPrice"}}</td>
                                <td
                                    style="background-color: #FAFAFA; color: #000000; font-weight: 800; text-align: {{__meta.oppositeAlign}};">
                                    {{formatCurrency (or totalAmount 0) (or currency "TRY")}}
                                </td>
                            </tr>
                        </table>

                        {{> payment-info}}

                        <!-- Important Info -->
                        <div style="background-color: #FFF8E1; border-radius: 6px; padding: 20px; margin-bottom: 30px;">
                            <h4 style="margin: 0 0 10px; color: #6F4C0D; font-size: 16px; font-weight: 800;">
                                {{t "common.importantInfo"}}
                            </h4>
                            <ul
                                style="margin: 0; padding-{{__meta.align}}: 20px; color: #5A4318; font-size: 13px; line-height: 1.6;">
                                <li>{{t "reservationConfirmation.paymentInfoText"}}</li>
                                <li>{{t "reservationConfirmation.currencyExchangeText"}}</li>
                                <li>{{t "reservationConfirmation.additionalInfoText"}}</li>
                            </ul>
                        </div>

                        <!-- Button -->
                        {{> button url=(or manageBookingUrl ticketUrl modifyUrl reservationUrl bookingUrl '#') text=(t "common.viewTicket") }}
                    </td>
                </tr>
            </table>

            {{> footer}}
        </center>
    </div>
</body>

</html>
