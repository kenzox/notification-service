<!-- Payment Information (Canonical Card) -->
<h3 style="margin: 0 0 15px;">{{t "common.paymentInfo"}}</h3>
<div style="border: 1px solid #E0E0E0; border-radius: 8px; margin-bottom: 30px; overflow: hidden;">
    <table width="100%" cellpadding="0" cellspacing="0">
        <tr>
            <td style="padding: 15px; background-color: #F9F9F9; border-bottom: 1px solid #E0E0E0;">
                <p style="margin: 0 0 5px; font-size: 14px; color: #000000;">{{t "common.paymentReceived"}}</p>
                <p style="margin: 0; font-size: 13px; color: #666666;">{{formatDate (or paymentDate reservationDate)}}
                </p>
            </td>
            <td
                style="padding: 15px; background-color: #F9F9F9; border-bottom: 1px solid #E0E0E0; text-align: {{__meta.oppositeAlign}}; vertical-align: top;">
                <span
                    style="display: inline-block; color: #34A853; font-weight: 700; font-size: 14px; margin-bottom: 5px;">{{or
                    paymentStatus paidStatus (t "common.paid")}}</span>
                <div style="font-size: 14px; color: #000000;">{{or (formatCurrency totalAmount (or currency "TRY"))
                    "-"}}</div>
            </td>
        </tr>
        <tr>
            <td style="padding: 15px; background-color: #FFFFFF;">
                <span class="payment-brand"
                    style="display: inline-block; vertical-align: middle; margin-{{__meta.oppositeAlign}}: 6px; color: #666666; font-size: 11px; font-weight: 700; letter-spacing: 0.2px;">{{or
                    cardBrand cardType "CARD"}}</span>
                {{#if cardLogoUrl}}
                <img src="{{cardLogoUrl}}" alt="{{or cardBrand cardType 'Card'}}" width="36" height="22"
                    style="vertical-align: middle; margin-{{__meta.oppositeAlign}}: 10px; border: 0; outline: none; text-decoration: none;">
                {{else}}
                {{#if (equalsIgnoreCase (or cardBrand cardType "mastercard") "visa")}}
                <span
                    style="display: inline-block; vertical-align: middle; margin-{{__meta.oppositeAlign}}: 10px; padding: 2px 7px; border: 1px solid #D5E1FF; border-radius: 4px; color: #1A1F71; background-color: #F4F7FF; font-size: 10px; font-weight: 800; letter-spacing: 0.8px; line-height: 1.2;">VISA</span>
                {{else}}
                <span
                    style="display: inline-block; vertical-align: middle; margin-{{__meta.oppositeAlign}}: 10px; line-height: 0; white-space: nowrap;">
                    <span
                        style="display: inline-block; width: 16px; height: 16px; border-radius: 50%; background-color: #EB001B;"></span><span
                        style="display: inline-block; width: 16px; height: 16px; border-radius: 50%; background-color: #F79E1B; margin-left: -6px;"></span>
                </span>
                {{/if}}
                {{/if}}
                <span style="font-size: 14px; color: #000000; font-weight: 500;">.... {{or cardLast4 cardLastFour cardLastDigits cardNumberLast4
                    "----"}}
                    - {{or cardHolder cardHolderName customerName "Guest"}}</span>
            </td>
            <td
                style="padding: 15px; background-color: #FFFFFF; text-align: {{__meta.oppositeAlign}}; font-weight: 800; font-size: 16px; color: #000000;">
                {{or (formatCurrency totalAmount (or currency "TRY")) "-"}}</td>
        </tr>
    </table>
</div>
