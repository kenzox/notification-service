{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@app/*": [
                "apps/api/src/*"
            ],
            "@shared/*": [
                "libs/shared/src/*"
            ]
        }
    },
    "include": [
        "apps/**/*.ts",
        "libs/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}