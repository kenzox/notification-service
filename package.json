{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Standalone email notification service for Calibre Tour",
  "main": "dist/apps/api/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/apps/api/main.js",
    "dev": "ts-node-dev --respawn --transpile-only apps/api/src/main.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\""
  },
  "keywords": [
    "notification",
    "email",
    "smtp",
    "express"
  ],
  "author": "Calibre Tour",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "nodemailer": "^6.9.7",
    "handlebars": "^4.7.8",
    "zod": "^3.22.4",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "swagger-ui-express": "^5.0.0",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "prettier": "^3.1.1"
  }
}
